# SmartAgent2 环境配置

# 存储模式: local (本地开发) | production (生产环境)
STORAGE_MODE=local

# 本地模式 SQLite 数据库路径
SQLITE_DB_PATH=smartagent2_dev.db

# OpenAI API 配置
OPENAI_API_KEY=your-api-key-here
# OPENAI_BASE_URL=https://api.openai.com/v1

# LLM 模型配置
LLM_MODEL=gpt-4.1-mini
EMBEDDING_MODEL=text-embedding-3-small
EMBEDDING_DIMENSION=1536
TEMPERATURE=0.7
MAX_TOKENS=2048

# 应用配置
DEBUG=true
HOST=0.0.0.0
PORT=8000
